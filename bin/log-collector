#!/bin/bash
set -eu
# Reference: http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
SOURCE="${BASH_SOURCE[0]}"
BIN_DIR="$( dirname "$SOURCE" )"
if [[ -z "${1:-""}" ]]; then
    echo "No mode supplied. Starting Log Collector HTTP server."
    MODE=""
else
    echo "Listening in Kafka mode."
    MODE="kafka"
fi
while [ -h "$SOURCE" ]
do
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
  BIN_DIR="$( cd -P "$( dirname "$SOURCE"  )" && pwd )"
done

source $BIN_DIR/env.sh

if [ $MODE == "kafka" ]; then
  $BIN_DIR/../cloudera-integration/csd/scripts/control.sh start_log_collector_kafka
else
  $BIN_DIR/../cloudera-integration/csd/scripts/control.sh start_log_collector
fi
