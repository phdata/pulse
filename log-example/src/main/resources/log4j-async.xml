<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%5p [%t] (%F:%L) - %m%n"/>
        </layout>
    </appender>
    <appender name="http" class="io.phdata.pulse.log.HttpAppender">
        <param name="Address" value="http://${ZK_EDGE}:9001/log?application=pulse-test-100"/>

    </appender>
    <appender name="async" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="500"/>
        <appender-ref ref="http"/>
    </appender>
    <logger name="io.phdata.pulse.shade.org.apache.http">
        <level        value="off"/>
        <appender-ref ref="async" />
    </logger>
    <logger name="io.phdata.pulse.shade.org.apache.wire">
        <level        value="off"/>
        <appender-ref ref="async" />
    </logger>
    <root>
	<level value="INFO" />
        <appender-ref ref="async"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
